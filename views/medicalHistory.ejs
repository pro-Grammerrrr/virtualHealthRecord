<div class="container mt-4">
    <h1 class="mb-3">Medical History</h1>
    <!-- Loop through and display medical history entries -->
    <% medicalHistoryEntries.forEach((entry, index) => { %>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Medical History Entry <%= index + 1 %></h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Condition Name or Diagnosis:</strong> <%= entry.condition %></li>
                            <li class="list-group-item"><strong>Date of Diagnosis:</strong> <%= entry.dateOfDiagnosis %></li>
                            <li class="list-group-item"><strong>Severity or Stage of the Condition:</strong> <%= entry.stage %></li>
                            <li class="list-group-item"><strong>Treatment Plan or Recommendations:</strong> <%= entry.treatmentPlan %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>
