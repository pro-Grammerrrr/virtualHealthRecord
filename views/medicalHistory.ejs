<div class="container mt-4">
    <h1 class="mb-3">Medical History</h1>
    <table class="table table-striped table-hover table-borderless caption-top">
        <caption>This is your previous medical records</caption>
        <thead class="table-info">
            <tr style="color: #292F36 !important;">
                <th style="color: #292F36 !important;" scope="col"><i class="fa-solid fa-syringe fa-lg"></i></th>
                <th scope="col">Diagnosis</th>
                <th scope="col">Diagnosed by Dr.</th>
                <th scope="col">Severity or Stage</th>
                <th scope="col">Diagnosis Date</th>
                <th scope="col">Treatment Plan or Recommendations</th>
            </tr>
        </thead>
        <tbody>
            <% medicalHistoryEntries.forEach((entry, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= entry.condition %></td>
                    <td> Dr.<%= entry.d_id[0].fName %> <%= entry.d_id[0].lName %></td>
                    <td><%= entry.stage %></td>
                    <td><%= entry.diagnosisDate %></td>
                    <td><%= entry.treatment %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
